# For advice on how to change settings please see
# http://dev.mysql.com/doc/refman/5.7/en/server-configuration-defaults.html

[mysqld]
#
# Remove leading # and set to the amount of RAM for the most important data
# cache in MySQL. Start at 70% of total RAM for dedicated server, else 10%.
# innodb_buffer_pool_size = 128M
#
# Remove leading # to turn on a very important data integrity option: logging
# changes to the binary log between backups.
# log_bin
#
# Remove leading # to set options mainly useful for reporting servers.
# The server defaults are faster for transactions and fast SELECTs.
# Adjust sizes as needed, experiment to find the optimal values.
# join_buffer_size = 128M
# sort_buffer_size = 2M
# read_rnd_buffer_size = 2M

# Disabling symbolic-links is recommended to prevent assorted security risks
symbolic-links=0

pid-file=/var/run/mysqld/mysqld.pid

[client]
port = 3305
socket = /tmp/mysql.sock
default-character-set=utf8
loose-prompt="\u@db \R:\m:\s [\d]> "
loose-no-auto-rehash

[mysqld]
user = mysql
port = 3305
socket = /tmp/mysql.sock
character-set-server=utf8
read_only=on
sql_mode='NO_ENGINE_SUBSTITUTION'


basedir = /usr/bin
datadir = /home/mysql/data
server_id = 153
back_log = 1024
//控制允许的最大连接数
max_connections = 2000
max_connect_errors = 6000
open_files_limit = 65535
table_open_cache = 1024 
max_allowed_packet = 16M
binlog_cache_size = 4M
max_binlog_cache_size =128M
max_binlog_size =1024M
max_heap_table_size = 96M
//下面两个是控制内存临时表大小
tmp_table_size = 96M
read_buffer_size = 1M
//内存配置相关参数
read_rnd_buffer_size = 8M
sort_buffer_size = 8M
join_buffer_size = 32M
key_buffer_size = 32M
thread_cache_size = 50
query_cache_size = 8M
gtid_mode = on
enforce-gtid-consistency = ON
log_error = /home/mysql/data/mysql4.err
slow_query_log = 1
long_query_time = 1
lower_case_table_names = 1
log_bin = binlog
binlog_format = mixed
#sync_binlog=1的时候，是最安全但是性能损耗最大的设置。系统故障的时候，对实际数据没有任何实质性的影响。
sync_binlog = 1
expire_logs_days = 7
default_storage_engine = InnoDB
innodb_buffer_pool_size = 18G
innodb_flush_log_at_trx_commit = 1
innodb_flush_neighbors = 1
//innodb I/O相关配置
innodb_log_buffer_size = 16M
innodb_log_file_size = 256M
innodb_log_files_in_group = 3
innodb_max_dirty_pages_pct = 50
innodb_file_per_table = 1
innodb_flush_method = O_DIRECT
default-time-zone='+8:00'
# 设置error log、slow_log、genera log，等等记录日志的显示时间参数 
log_timestamps=system

# slave 开启并行复制，可调整workers的值
slave_transaction_retries = 60
slave_parallel_type = LOGICAL_CLOCK
slave_parallel_workers = 6

[mysqldump]
quick
max_allowed_packet = 32M

